@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if ( this.SignInManager.IsSignedIn( this.User ) )
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="ml-auto">
        <div class="navbar-nav text-sm-center">
            <a asp-area="" asp-controller="Users" asp-action="Cart" class="nav-item nav-link"><i class="fa fa-shopping-cart"></i> Cart</a>
            <a asp-area="" class="nav-item nav-link" asp-controller="Manage" asp-action="Index" title="Manage">Hello, @( this.UserManager.GetUserAsync( this.User ).Result.Name)!</a>
            <button type="submit" class="btn btn-link p-0 mx-sm-auto nav-link nav-item" id="logout">Log out</button>
        </div>
    </form>
}
else
{
    <ul class="nav ml-auto">
        <li class="nav-item ml-sm-auto">
            <a asp-area="" asp-controller="Account" asp-action="Register" class="nav-link">Register</a>
        </li>
        <li class="nav-item mr-sm-auto">
            <a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link">Log in</a>
        </li>
    </ul>
}