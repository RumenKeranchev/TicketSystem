@using TicketSystem.Common.Contstants
<!DOCTYPE html>
<html class="MetalFont">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@( this.ViewData[ "Title" ] ) - Ticket System</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
        <link rel="stylesheet" href="~/css/site.css"/>
        <link type="text/css" href="~/css/AdminLayout.css" rel="stylesheet"/>
        <link type="text/css" href="~/css/NormalUsers.css" rel="stylesheet"/>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"/>
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true"/>
    </environment>
</head>
<body id="body" class="MetalFont ">
    @if ( this.TempData.ContainsKey( WebConstants.TempDataSuccessMessageKey ) )
    {
        <center>
            <div class="alert alert-success text-center alert-dismissable" style="width: 33%">
                @( this.TempData[ WebConstants.TempDataSuccessMessageKey ] ) <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </center>
    }
    @if ( this.TempData.ContainsKey( WebConstants.TempDataErrorMessageKey ) )
    {
        <center>
            <div class="alert alert-danger text-center alert-dismissable" style="width: 33%">
                @( this.TempData[ WebConstants.TempDataErrorMessageKey ] ) <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </center>
    }


    <nav class="navbar navbar-inverse navbar-fixed-top" style="background: black;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Ticket System</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if ( this.User.IsInRole( WebConstants.AdminRole ) )
                    {
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle">Songs <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a asp-area="Admin" asp-controller="SongsAdmin" asp-action="Index">All Songs</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="SongsAdmin" asp-action="Create">Create Song</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="SongsAdmin" asp-action="CreateAlbum">Create Album</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="BandsAdmin" asp-action="Create">Create Band</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a asp-area="Admin" asp-controller="UsersAdmin" asp-action="Index">Manage Users</a>
                        </li>
                    }
                    @if ( this.User.IsInRole( WebConstants.AdminRole ) || this.User.IsInRole( WebConstants.OrganizerRole ) )
                    {
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle">Concerts <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a asp-area="Organizer" asp-controller="Organizer" asp-action="Create">Create Concert</a>
                                </li>
                                <li>
                                    <a asp-area="Organizer" asp-controller="Organizer" asp-action="Index">All Concerts</a>
                                </li>
                            </ul>
                        </li>
                    }
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle"><span class="glyphicon glyphicon-search"></span> Search</a>
                        <ul class="dropdown-menu"style="background: black">
                            <li >
                                <div>
                                    <form class="navbar-form" role="search" asp-controller="Home" asp-action="Search">
                                        <div class="input-group">
                                            Songs <input type="checkbox" name="songs" id="songs" value="false"/><br/>
                                            Albums <input type="checkbox" name="albums" id="albums" value="false"/><br/>
                                            Bands <input type="checkbox" name="bands" id="bands" value="false"/>
                                            Concerts <input type="checkbox" name="concerts" id="concerts"value="false"/>
                                        </div>
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="Search..." name="searchTerm" id="searchTerm">
                                            <div class="input-group-btn">
                                                <button class="btn btn-default" type="submit">
                                                    <i class="glyphicon glyphicon-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a asp-area="" asp-controller="Bands" asp-action="Index">Browse Bands</a>
                    </li>
                  </ul>
                @await this.Html.PartialAsync( "_LoginPartial" )
            </div>
        </div>
    </nav>
    <div class="container body-content " id="container">
        @( this.RenderBody() )
        <hr/>
        <footer>
            <p>&copy; 2017 - Ticket System</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @( this.RenderSection( "Scripts", required: false ) )
</body>
</html>

<script>
    $("#songs").on('change',
        function() {
            if ($(this).is(':checked')) {
                $(this).attr('value', 'true');
            } else {
                $(this).attr('value', 'false');
            }
        });
    $("#albums").on('change',
        function() {
            if ($(this).is(':checked')) {
                $(this).attr('value', 'true');
            } else {
                $(this).attr('value', 'false');
            }
        });
    $("#bands").on('change',
        function() {
            if ($(this).is(':checked')) {
                $(this).attr('value', 'true');
            } else {
                $(this).attr('value', 'false');
            }
        });
    $("#concerts").on('change',
        function() {
            if ($(this).is(':checked')) {
                $(this).attr('value', 'true');
            } else {
                $(this).attr('value', 'false');
            }
        });
</script>