@inject SignInManager< User > SignInManager
@{
    var hasExternalLogins = ( await this.SignInManager.GetExternalAuthenticationSchemesAsync() ).Any();
}

<ul class="profile-nav">
    <li class="@ManageNavPages.IndexNavClass( this.ViewContext )" id="prof">
        <a asp-action="Index">Profile</a>
    </li>
    <li class="@ManageNavPages.ChangePasswordNavClass( this.ViewContext )" id="pass">
        <a asp-action="ChangePassword">Password</a>
    </li>
    @if ( hasExternalLogins )
    {
        <li class="@ManageNavPages.ExternalLoginsNavClass( this.ViewContext )" id="ext-logins">
            <a asp-action="ExternalLogins">External logins</a>
        </li>
    }
    <li class="@ManageNavPages.TwoFactorAuthenticationNavClass( this.ViewContext )" id="tf-auth">
        <a asp-action="TwoFactorAuthentication">Two-factor authentication</a>
    </li>
   
</ul>