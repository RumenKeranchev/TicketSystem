@model IEnumerable<ListPreviousConcertsServiceModel>

@{
    ViewData[ "Title" ] = "Home Page";
}
<script>
    $("body").addClass("nu-index");
    $("main").attr("id", "container");
</script>

<header class="main-header">
    <div class="w-100">
        <h1 class="text-center">Welcome to Music Town</h1>
        <p class="text-center">A place where you can find some cool music, past and upcoming concerts.</p>
    </div>
</header>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img src="~/images/banner1.jpg" class="col-img" />
            <div class="carousel-caption d-none d-md-block">
                <p>
                    <a class="btn btn-normal Sharp" asp-area="" asp-controller="Concerts" asp-action="Details" asp-route-id="3">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/banner2.jpg" class="col-img" />
            <div class="carousel-caption  d-none d-md-block" role="option">
                <p>
                    <a class="btn btn-normal Sharp" asp-area="" asp-controller="Concerts" asp-action="Details" asp-route-id="2">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/banner3.jpg" class="col-img" />
            <div class="carousel-caption  d-none d-md-block" role="option">
                <p>
                    <a class="btn btn-normal Sharp" asp-area="" asp-controller="Concerts" asp-action="Details" asp-route-id="4">
                        Learn More
                    </a>
                </p>
            </div>
        </div>

    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row justify-content-center text-center mt-5">
    <h2>Previous Concerts</h2>
    @await this.Html.PartialAsync( "_ListPreviousConcertsPartial", this.Model )
</div>