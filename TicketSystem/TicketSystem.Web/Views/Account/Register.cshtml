@model  RegisterViewModel 
@{
    ViewData[ "Title" ] = "Register";
}
<script>
    $("body").addClass("nu-LoginRegister");
</script>


<div class="row" id="reg-pg">
    <h2 class="mt-5 mb-3 ml-3 w-100 text-center">@this.ViewData[ "Title" ]</h2>
    <div class="col-lg-6 offset-lg-3 text-center pb-4 " style="margin-bottom: 20px">
        <form asp-route-returnUrl="@ViewData[ "ReturnUrl" ]" method="post">
            <h4 class="text-center">Create a new account.</h4>
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
            <div class="form-group col-lg-6">
                <label for="UserName">Username</label>
                <input asp-for="UserName" class="form-control Sharp log-reg-form-inputs" placeholder="Enter username..."/>
                <span asp-validation-for="UserName" class="text-danger" id="UserName"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control Sharp log-reg-form-inputs" placeholder="Enter your name..."/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control Sharp log-reg-form-inputs" placeholder="Enter email..."/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="row">
            <div class="form-group  col-lg-6">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control Sharp log-reg-form-inputs" placeholder="Enter password..."/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group  col-lg-6">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control Sharp log-reg-form-inputs" placeholder="Confirm password..."/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            </div>
            <button type="submit" class="btn btn-default Sharp w-100 mt-4">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync( "_ValidationScriptsPartial" )
}