@model DeleteSongViewModel

@{
    this.ViewBag.Title = $"Delete '{this.Model.SongName}'";
    this.Layout = "_Layout";
}

<script>
    $("body").addClass("DeleteSongsAdmin adm");
</script>

<h1 class="text-center pt-5 mb-5">@(this.ViewData[ "Title" ])</h1>
<h4 class="text-center pb-3">Are you sure you want to delete this song?</h4>
<div class="row">
    <div class="btn-group mx-auto">
        <a class="btn btn-danger Sharp" asp-area="Admin" asp-controller="SongsAdmin" asp-action="Destroy" asp-route-id="@(this.Model.Id)">Yes, delete it.</a>
        <a class="btn btn-outline-primary Sharp" asp-area="Admin" asp-controller="SongsAdmin" asp-action="Index">Cancel</a>
    </div>
</div>

