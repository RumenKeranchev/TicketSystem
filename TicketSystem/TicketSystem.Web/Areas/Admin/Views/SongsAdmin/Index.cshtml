@model IndexViewModel

@{
    this.ViewBag.Title = "All Songs";
    this.Layout = "_Layout";
}
<script>
    $("body").addClass("AllSongsAdmin adm");
    $("main").addClass("pb-1 px-0");
    $(".adm main").css("background", "rgba(0,0,0,0.5)");
</script>

<h1 class="text-center pt-5 mb-5">@( this.ViewData[ "Title" ] )</h1>

@if ( this.Model.TotalSongs > this.Model.Songs.Count() )
{
    <nav>
        <ul class="pagination">
            <li class="page-item @( this.Model.CurrentPage == 1 ? "disabled" : String.Empty )">
                <a class="page-link" asp-area="Admin" asp-controller="SongsAdmin" asp-action="Index" asp-route-page="@(this.Model.PreviousPage)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            <li class=" page-item @( this.Model.CurrentPage == 1 ? "active" : String.Empty )">
                <a class="page-link" asp-area="Admin" asp-controller="SongsAdmin" asp-action="Index"
                   asp-route-page="@(this.Model.PreviousPage)">
                    @(this.Model.PreviousPage)
                </a>
            </li>
            <li class="page-item @( this.Model.CurrentPage >= 2 ? "active" : String.Empty )">
                <a class="page-link" asp-area="Admin" asp-controller="SongsAdmin" asp-action="Index"
                   asp-route-page="@( this.Model.CurrentPage == 1 ? 2 : this.Model.CurrentPage )">
                    @( this.Model.CurrentPage == 1 ? 2 : this.Model.CurrentPage )
                </a>
            </li>

            @if ( this.Model.CurrentPage != this.Model.TotalPages )
            {
                if ( this.Model.CurrentPage != this.Model.TotalPages - 1 )
                {
                    <li class="page-item">
                        <a class="page-link disabled">...</a>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link" asp-area="Admin" asp-controller="SongsAdmin" asp-action="Index"
                       asp-route-page="@(this.Model.TotalPages)">
                        @(this.Model.TotalPages)
                    </a>
                </li>
            }


            <li class="page-item @( this.Model.CurrentPage == this.Model.TotalPages ? "disabled" : String.Empty )">
                <a class="page-link" asp-area="Admin" asp-controller="SongsAdmin" asp-action="Index" asp-route-page="@(this.Model.NextPage)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>

}
<table class="table table-responsive AllSongsAdminTable">
    <thead style="background: black">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Genre</th>
            <th>Play</th>
            <th>Band</th>
            <th>Album</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var song in this.Model.Songs )
        {
            <tr>
                <td style="background: black;color: wheat">@song.Id</td>
                <td>@song.Name</td>
                <td>@song.Genre</td>
                <td>
                    <iframe width="150" height="51" src="https://www.youtube.com/embed/@song.UrlId" frameborder="0" allowfullscreen></iframe>
                </td>
                <td>@song.Band</td>
                <td>@song.Album</td>
                <td>
                    <div class="btn-group">
                        <a asp-area="Admin" asp-controller="SongsAdmin" asp-action="Edit" class="btn btn-warning Sharp" asp-route-id="@song.Id">Edit</a>
                        <a asp-area="Admin" asp-controller="SongsAdmin" asp-action="Delete" class="btn btn-danger Sharp" asp-route-id="@song.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if ( this.Model.TotalSongs > this.Model.Songs.Count() )
{
    <nav>
        <ul class="pagination">
            <li class="page-item @( this.Model.CurrentPage == 1 ? "disabled" : String.Empty )">
                <a class="page-link" asp-area="Admin" asp-controller="SongsAdmin" asp-action="Index" asp-route-page="@(this.Model.PreviousPage)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>

            <li class=" page-item @( this.Model.CurrentPage == 1 ? "active" : String.Empty )">
                <a class="page-link" asp-area="Admin" asp-controller="SongsAdmin" asp-action="Index"
                   asp-route-page="@(this.Model.PreviousPage)">
                    @(this.Model.PreviousPage)
                </a>
            </li>
            <li class="page-item @( this.Model.CurrentPage >= 2 ? "active" : String.Empty )">
                <a class="page-link" asp-area="Admin" asp-controller="SongsAdmin" asp-action="Index"
                   asp-route-page="@( this.Model.CurrentPage == 1 ? 2 : this.Model.CurrentPage )">
                    @( this.Model.CurrentPage == 1 ? 2 : this.Model.CurrentPage )
                </a>
            </li>

            @if ( this.Model.CurrentPage != this.Model.TotalPages )
            {
                if ( this.Model.CurrentPage != this.Model.TotalPages - 1 )
                {
                    <li class="page-item">
                        <a class="page-link disabled">...</a>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link" asp-area="Admin" asp-controller="SongsAdmin" asp-action="Index"
                       asp-route-page="@(this.Model.TotalPages)">
                        @(this.Model.TotalPages)
                    </a>
                </li>
            }


            <li class="page-item @( this.Model.CurrentPage == this.Model.TotalPages ? "disabled" : String.Empty )">
                <a class="page-link" asp-area="Admin" asp-controller="SongsAdmin" asp-action="Index" asp-route-page="@(this.Model.NextPage)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>

}