@model IEnumerable<GetBandsServiceModel   >

@{
    ViewBag.Title = "Add Bands";
    Layout = "_Layout";
}

<h2>@(this.ViewData[ "Title" ])</h2>

<div class="row ">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="BandId">Band</label>
                <select class="form-control Sharp" asp-for="BandId">
                    <option disabled selected>Select Band...</option>
                    @foreach ( var band in this.Model.Bands )
                    {
                        <optgroup label="@band.Genre">
                            <option value="@band.Id">@band.Name</option>
                        </optgroup>
                    }
                </select>
                <span asp-validation-for="@(this.Model.BandId)" class="text-danger"></span>
            </div>
            <input type="submit" class="btn btn-custom Sharp"/>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    @await Html.PartialAsync( "_ValidationScriptsPartial" )
}