@model  IEnumerable< ListAllConcertsServiceModel > 

@{
    ViewBag.Title = "All Concerts";
    Layout = "_Layout";
}

<script>
    document.getElementById("body").className += " OrganizerCreateConcert";
</script>

<h2 class="text-center">@(this.ViewData[ "Title" ])</h2>

<table class="table table-hover AllSongsAdminTable" style="color: cyan">
    <thead style="background: black">
    <tr>
        <th>Id</th>
        <th class="text-center">Name</th>
        <th class="text-center">Genre</th>
        <th class="text-center">Country</th>
        <th class="text-center">City</th>
        <th class="text-center">№ Bands</th>
        <th class="text-center">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach ( var concert in this.Model )
    {
        <tr>
            <td style="background: black">@concert.Id</td>
            <td>@concert.Name</td>
            <td>@concert.Genre.ToString()</td>
            <td class="text-center">@concert.Country</td>
            <td class="text-center">@concert.City</td>
            <td class="text-center">@concert.NumberOfBandsPlaying</td>
            <td>
                <a asp-area="Organizer" asp-controller="Organizer" asp-action="Edit" asp-route-id="@concert.Id" class="btn btn-sm btn-warning Sharp">Edit</a>
                <a asp-area="Organizer" asp-controller="Organizer" asp-action="Delete" asp-route-id="@concert.Id"  class=" btn btn-sm btn-danger Sharp">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>